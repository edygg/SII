@model SistemaIntegralIngresos.Models.Announcement

<div class="row">

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Registro de Visitas</legend>


            <div class="editor-label">
                @Html.LabelFor(model => model.InitialDate)
            </div>
            <div class="editor-field">
                
                @Html.EditorFor(model => model.InitialDate)
                @Html.ValidationMessageFor(model => model.InitialDate)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FinalDate)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FinalDate)
                @Html.ValidationMessageFor(model => model.FinalDate)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.SpecificDays)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SpecificDays)
                @Html.ValidationMessageFor(model => model.SpecificDays)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Observations)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Observations)
                @Html.ValidationMessageFor(model => model.Observations)
            </div>

            <p>
                <input type="submit" value="Create" class="button" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
