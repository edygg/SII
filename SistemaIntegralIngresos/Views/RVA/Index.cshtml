
<div class="row">
    <h2>Registro de Visitas Anunciadas</h2>

    <div class="large- columns" >
        <fieldset>
            <legend>Seleccione el campus:</legend>
            
            @Html.DropDownList("Campus","Seleccione un campus")
        </fieldset>

    </div>

    
    <div class="large-12 columns">
    
        <fieldset>
            <legend>Tipo de Fechas:</legend>

            <input type="radio" name="tipo_fecha">Fecha Unica</input>
            <input type="radio" name="tipo_fecha">Múltiples Fechas</input>
       </fieldset>
    </div>

    <div class="large-6 columns">
        <fieldset>
            <legend>Desde</legend>
            <input id="Initial_Date" type="date"/>
        </fieldset>
    </div>
    <div class="large-6 columns">
        <fieldset>
            <legend>Hasta</legend>
            <input id="Final_Date" type="date" />
        </fieldset>
    </div>

</div>